{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",

		"moduleResolution": "node",
		"resolveJsonModule": true,

		"rootDir": "./src",
		"outDir": "./dist",

		"allowJs": false,
		"sourceMap": true,
		"declaration": false,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		"**/node_modules/",
		"**/__tests__/",
		"coverage/",
		"dist/",
	],
}
